<h1>Update <%= @word.name() %></h1>

<form action="/words/<%= @word.id() %>" method="post">
  <input name="_method" type="hidden" value="patch">

  <label for="word_name">Rename word</label>
  <input id="word_name" name="word_name" type="text" class="form-control" value= <%= @word.name() %> >
  <button type="submit">Update</button>
</form>

<p><a href="/words">Return to word list</a></p>