<h1>Update <%= @definition.word_definition() %></h1>

<form action="/words/<%= @word.id%>/definitions/<%= @definition.id%>" method="post">
  <input name="_method" type="hidden" value="patch">

  <label for="word_definition">Edit definition</label>
  <input id="word_definition" name="word_definition" type="text" class="form-control">
  <button type="submit">Update</button>
</form>

<p><a href="/words/<%= @word.id %>/definitions">Return to Definitions list</a></p>